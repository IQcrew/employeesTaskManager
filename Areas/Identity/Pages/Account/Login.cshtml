@page
@model LoginModel

@{
    ViewData["Title"] = "Prihlásiť sa";
}

<style>
    .custom-registration-container {
        background-color: #ffffff;
    }

    .custom-registration-heading {
        color: #007bff;
    }

    .custom-form-label {
        color: #495057;
    }

    .custom-btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .custom-btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-control {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        color: #495057;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }
</style>

<div class="custom-registration-container container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="custom-registration-heading text-center mb-4">@ViewData["Title"]</h1>

            <form id="loginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="custom-registration-heading text-center mb-3">Prihláste sa na svoj účet</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="custom-form-label form-label">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="custom-form-label form-label">Heslo</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="custom-form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Zapamätať si ma
                    </label>
                </div>

                <div>
                    <button id="loginSubmit" type="submit" class="w-100 custom-btn-primary btn btn-lg btn-primary">Prihlásiť sa</button>
                </div>

                <div>
                    <p>
                        <a id="forgotPassword" asp-action="ChangePassword" asp-controller="passwordTokens">Zabudli ste heslo?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrovať sa</a>
                    </p>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
