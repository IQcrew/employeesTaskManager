@model employeesTaskManager.Models.complexUser

@{
    ViewData["Title"] = "Upraviť";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyJq27E8h2h2VaJ3a0QiMdpdP0DGIjS6b6"
          crossorigin="anonymous" />
    <style>
        .custom-page {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 0;
        }

        .custom-title {
            color: #007bff;
            margin-bottom: 1.5rem;
        }

        .custom-form-container {
            margin-top: 2rem;
        }

        .custom-form {
            background-color: #fff;
            padding: 2rem;
            border-radius: 0.25rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .custom-label {
            font-weight: bold;
        }

        .custom-input {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .custom-input:focus {
                border-color: #007bff;
                outline: 0;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .custom-checkbox {
            margin-top: 0.25rem;
        }

        .custom-btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .custom-btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .custom-btn-primary:hover,
            .custom-btn-secondary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        #isConfirmedCheckbox:checked + .custom-label {
            color: #28a745; /* Green color when checked */
        }

        #isConfirmedCheckbox:not(:checked) + .custom-label {
            color: #dc3545; /* Red color when unchecked */
        }
    </style>
</head>
<body class="custom-page">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 custom-form-container">
                <h1 class="custom-title">Upraviť</h1>
                <hr />

                <form asp-action="Edit" class="needs-validation custom-form" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- UserId -->
                    <input type="hidden" asp-for="UserId" class="form-control custom-input" readonly />

                    <!-- Role Dropdown -->
                    <div class="form-group">
                        <label asp-for="Role" class="control-label custom-label">Role</label>
                        <select asp-for="Role" class="form-control custom-input">
                            <option value="Admin">Admin</option>
                            <option value="Manager">Manažér</option>
                            <option value="Employee">Zamestnanec</option>
                            <option value="None">Žiadna</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <!-- Company Dropdown -->
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label custom-label">Company</label>
                        <select asp-for="CompanyId" class="form-control custom-input">
                            <option value="None">Žiadna</option>
                            @foreach (var company in Model.Firms)
                            {
                                <option value="@company.Id">@company.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>

                    <!-- FirstName -->
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label custom-label">First Name</label>
                        <input asp-for="FirstName" class="form-control custom-input" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <!-- LastName -->
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label custom-label">Last Name</label>
                        <input asp-for="LastName" class="form-control custom-input" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="control-label custom-label">Email</label>
                        <input asp-for="Email" class="form-control custom-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Email Confirmation Status -->
                    <div class="form-group">
                        <div>
                            <input asp-for="IsEmailConfirmed" type="checkbox" id="isConfirmedCheckbox" />
                            <label asp-for="IsEmailConfirmed" class="control-label custom-label">Je Potvrdený</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary custom-btn-primary">Uložiť</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary custom-btn-secondary">Späť na Zoznam</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"
            integrity="sha384-sKs6HF4i6tB56oR/X0BBbMMbUpJGcUtnOfAWrF1iTRdSMtb8Op7zAx4I4skaynVG"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyJq27E8h2h2VaJ3a0QiMdpdP0DGIjS6b6"
            crossorigin="anonymous"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            document.getElementById('isConfirmedCheckbox').checked = @Model.IsEmailConfirmed.ToString().ToLower();
            document.querySelector('label[for="isConfirmedCheckbox"]').innerText = @((Model.IsEmailConfirmed) ? "Je Potvrdený" : "Nie je Potvrdený");
        </script>
    }
</body>
</html>
