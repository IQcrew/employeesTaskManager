@model employeesTaskManager.Models.complexUser
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UsrManager

@{
    ViewData["Title"] = "Zmazať";

    var tempUser = UsrManager.Users.FirstOrDefault(x => x.Id == Model.UserId);
    string name = $"{tempUser.FirstName} {tempUser.LastName}";
}
<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Add your custom CSS styles here -->
    <style>
        .delete-body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 0;
        }

        .delete-header {
            color: #3498db;
            text-align: center;
        }

        .delete-divider {
            border-top: 2px solid #3498db;
        }

        .delete-list {
            margin: 20px;
        }

        .delete-label {
            font-weight: bold;
        }

        .delete-value {
            margin-bottom: 10px;
        }

        .delete-btn-danger {
            background-color: #e74c3c;
            color: #fff;
        }

            .delete-btn-danger:hover {
                background-color: #c82333;
            }

        .delete-btn-back {
            background-color: #3498db;
            color: #fff;
        }

            .delete-btn-back:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body class="delete-body">
    <div class="delete-header">
        <h1>Zmazať</h1>
        <h3>Ste si istý, že chcete zmazať použivateľa?</h3>
    </div>

    <div class="delete-divider"></div>

    <dl class="row delete-list">
        <dt class="col-sm-2 delete-label">
            Meno:
        </dt>
        <dd class="col-sm-10 delete-value">
            @name
        </dd>
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Zmazať" class="btn delete-btn-danger" /> |
        <a asp-action="Index" class="btn delete-btn-back">Späť na Zoznam</a>
    </form>
</body>
</html>
